# -*- mode: conf-unix; -*-

# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# defaults
[*]
insert_final_newline = true     

# 4 space indentation
[*.{ini,py,py.tpl,rst,json}]
indent_style = space
indent_size = 4

# 2 space indentation
[*.{json}]
indent_style = space
indent_size = 2
